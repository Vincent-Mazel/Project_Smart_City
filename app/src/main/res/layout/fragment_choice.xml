<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_layout_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="CHOICE"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="175dip"
            android:layout_marginTop="4dip"
            android:layout_marginEnd="175dip"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_choice_scrollView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="32dp">

            <LinearLayout
                android:id="@+id/fragment_choice_listChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/button_save_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="84dp" />

    </LinearLayout>


</LinearLayout>