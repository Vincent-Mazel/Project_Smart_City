<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/inscription_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/inscription_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tilte_inscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dip"
                android:gravity="center_horizontal"
                android:text="@string/inscription"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/design_default_color_primary_dark" />

            <View
                android:id="@+id/divider"
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dip"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/insription_section1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inscription_infoPerso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundText"
                    android:text="@string/informations_personnelles"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/inscription_nom"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:autofillHints=""
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/inscription_prenom"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:hint="@string/pr_nom"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:autofillHints="" />

                <EditText
                    android:id="@+id/inscription_adrmail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="@string/votre_adresse_mail_svp"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:autofillHints="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inscription_password"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:ems="10"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inscription_confirm_password"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dip"
                        android:ems="10"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:autofillHints="" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inscription_section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inscription_infoPerso3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundText"
                    android:text="@string/informations_compl_mentaires"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inscription_pseudo"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:autofillHints=""
                        android:hint="@string/pseudo"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/spinner_sexe_inscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dip"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/inscription_size"
                            android:layout_width="128dip"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="@string/size_cm"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:autofillHints="" />

                        <EditText
                            android:id="@+id/inscription_weight"
                            android:layout_width="128dip"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:hint="@string/weight"
                            android:inputType="numberSigned"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:autofillHints="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:paddingStart="@android:dimen/app_icon_size">

                        <TextView
                            android:id="@+id/inscription_birthdayText"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="date"
                            android:text="@string/birthday"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/incription_buttonValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dip"
                android:shadowColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>