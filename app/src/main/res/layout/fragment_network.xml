<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/socials_network"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_marginEnd="8dip"
            android:layout_marginRight="8dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:text="Rechercher"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <SearchView
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dip" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="Create your own network"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_margin="8dip"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@android:color/darker_gray"
                app:srcCompat="@android:drawable/ic_input_add" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="75dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:text="Networks available"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ScrollView
            android:id="@+id/scrollViewNetWorkAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dip">

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>