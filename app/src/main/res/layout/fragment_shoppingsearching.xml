<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_shop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_shoppingSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="RECHERCHE"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/design_default_color_primary_dark" />

            <View
                android:id="@+id/divider8"
                android:layout_width="78dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary" />

            <SearchView
                android:id="@+id/shopping_searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp">

            </SearchView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/shopping_spinner"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <Switch
                    android:id="@+id/shopping_switchProxAnn"
                    style="@style/Animation.AppCompat.Tooltip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="trierCommerces"
                    android:showText="false"
                    android:splitTrack="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:checked="false" />

                <TextView
                    android:id="@+id/shopping_textViewSwitch"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Annuaire" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/arya"
                android:gravity="center"
                android:text="Commerces disponibles" />

            <ScrollView
                android:id="@+id/shopping_scrollViewResult"
                android:layout_width="wrap_content"
                android:layout_height="325dp"
                android:layout_margin="32dip">

                <LinearLayout
                    android:id="@+id/Shopping_Shop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/shopping_shopOne"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/border"
                                app:srcCompat="@drawable/temp_shop_logo" />

                            <TextView
                                android:id="@+id/shopping_shopOneName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Nike" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/shopping_fullNameShop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Nike's shop @ Odysseum"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/shopping_distanceOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="3 km"
                                android:textColor="?attr/actionModeSplitBackground"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/shopping_descriptionShopOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_weight="1"
                                android:text="Un petit peu de text pour dÃ©crire ce magazin"
                                android:textStyle="italic" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <include
            android:id="@+id/frag_shop_offers"
            layout="@layout/layout_shopsoffers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />
    </FrameLayout>

</LinearLayout>